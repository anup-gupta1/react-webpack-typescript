{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "declaration": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "outDir": "./dist",
        "baseUrl": "src",
        "paths": {
            "test-utils": ["./utils/test-utils"]
        },
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "strict": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "jsx": "react",
    },
    "include": ["src"],
}